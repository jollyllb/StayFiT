<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36596f"
    tools:context="com.example.puneet.stayfit.UserinfoActivity">


    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

    <EditText
        android:layout_margin="15dp"
        android:inputType="textPersonName"
        android:hint="Enter your Name"
        android:id="@+id/editTextName"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_margin="15dp"
        android:inputType="number"
        android:hint="Enter your Weight in Pounds"
        android:id="@+id/editTextPound"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
            android:layout_margin="15dp"
            android:inputType="number"
            android:hint="Enter your Height in CMs"
            android:id="@+id/editTextHeight"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_margin="15dp"
            android:inputType="number"
            android:hint="Enter your Age"
            android:id="@+id/editTextAge"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_margin="15dp"
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:entries="@array/genders"
            />

        <Spinner
            android:layout_margin="15dp"
            android:id="@+id/spinnerfitmale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:entries="@array/fitmodelMale"
            android:visibility="gone"
            />

        <Spinner
            android:layout_margin="15dp"
            android:id="@+id/spinnerfitfemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:entries="@array/fitmodelFemale"
            android:visibility="gone"
            />

        <Button
        android:layout_margin="15dp"
        android:id="@+id/saveinfo"
        android:text="Save Information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/stayfitlogo" />

</RelativeLayout>
